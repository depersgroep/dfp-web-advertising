{
	"name": "dfp-web-advertising",
	"version": "5.1.1",
	"description": "DFP web Library",
	"main": "gulpfile.js",
	"author": "Tar.get() Squad",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/depersgroep/dfp-web-advertising.git"
	},
	"scripts": {
		"prestart": "npm i",
		"start": "gulp",
		"jenkins-build": "gulp deploy",
		"test": "karma start",
		"test-browserstack": "karma start karma_browserstack.conf.js",
		"version": "npm run jenkins-build && git add ."
	},
	"clean": [
		"dist/"
	],
	"js": {
		"files": [
			{
				"src": [
					"src/object.keys-polyfill.js",
					"src/dfp-async.js"
				],
				"dest": "dist/",
				"file": "dfp"
			},
			{
				"src": [
					"src/dfp-async-helpers.js"
				],
				"dest": "dist/",
				"file": "dfp-helpers"
			},
			{
				"src": [
					"src/utils/storage.js",
					"src/dmp/dfp-dmp.js",
					"src/dmp/dfp-krux.js"
				],
				"dest": "dist/",
				"file": "dfp-krux"
			},
			{
				"src": [
					"src/utils/storage.js",
					"src/dmp/dfp-dmp.js",
					"src/dmp/dfp-krux.js",
					"src/dmp/dfp-cxense.js"
				],
				"dest": "dist/",
				"file": "dfp-dmp"
			}
		],
		"hint": {
			"src": [
				"src/**/*.js"
			]
		},
		"watch": [
			"src/**/*.js",
			"test/**/*.js"
		]
	},
	"git": {
		"hooks": {
			"src": "scripts/hooks/*",
			"dest": ".git/hooks/"
		}
	},
	"devDependencies": {
		"ansi-colors": "^4.1.1",
		"del": "^5.0.0",
		"eslint": "^6.2.0",
		"eslint-config-persgroep": "^2.0.0",
		"gulp": "^4.0.2",
		"gulp-concat": "^2.6.0",
		"gulp-copy": "^4.0.1",
		"gulp-eslint": "^6.0.0",
		"gulp-header": "^2.0.9",
		"gulp-if": "^3.0.0",
		"gulp-plumber": "^1.2.1",
		"gulp-rename": "^1.4.0",
		"gulp-replace": "^1.0.0",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-strip-code": "^0.1.4",
		"gulp-uglify": "^3.0.2",
		"jasmine-core": "^3.4.0",
		"karma": "^4.2.0",
		"karma-browserstack-launcher": "^1.5.1",
		"karma-chrome-launcher": "^2.0.0",
		"karma-coverage": "^1.1.1",
		"karma-edge-launcher": "^0.4.2",
		"karma-ie-launcher": "^1.0.0",
		"karma-jasmine": "^2.0.1",
		"karma-junit-reporter": "^1.2.0",
		"karma-viewport": "^1.0.4",
		"merge-stream": "^2.0.0",
		"yargs": "^14.0.0"
	}
}
